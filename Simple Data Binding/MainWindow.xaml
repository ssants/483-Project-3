<Window x:Class="Simple_Data_Binding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Simple_Data_Binding"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="textbox2" HorizontalAlignment="Left" Height="23" Margin="199,145,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="{Binding Path=BottomTextboxText}" Background="{Binding Path=BottomBoxBrush}" KeyDown="textbox_KeyDown" />
        <TextBox x:Name="textbox1" HorizontalAlignment="Left" Height="23" Margin="199,82,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="{Binding Path=TopTextboxText}" Background="{Binding Path=TopBoxBrush}" KeyDown="textbox_KeyDown" />

    </Grid>
</Window>
